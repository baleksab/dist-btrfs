{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/gui",
    "packages/server"
  ],
  "scripts": {
    "setup": "husky init",
    "dev:server": "pnpm --filter server dev",
    "dev:gui": "pnpm --filter gui dev:electron",
    "type-check": "pnpm -r run type-check"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings=0 --fix",
      "pnpm type-check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "@stylistic/eslint-plugin": "5.6.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "@typescript-eslint/parser": "8.47.0",
    "@typescript-eslint/eslint-plugin": "8.47.0"
  }
}