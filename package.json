{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/gui",
    "packages/server"
  ],
  "scripts": {
    "setup": "husky init",
    "dev:server": "pnpm --filter @dist-btrfs/server dev",
    "dev:gui": "pnpm --filter @dist-btrfs/gui dev:electron",
    "build:gui": "pnpm --filter @dist-btrfs/gui dist",
    "build:server": "pnpm --filter @dist-btrfs/server dist",
    "type-check": "pnpm -r run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "generate:docs": "pnpm --filter @dist-btrfs/server generate:swagger ../../docs/source/api-spec.json",
    "build:docs": "pnpm generate:docs && cd docs && make html"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --no-warn-ignored --max-warnings=0 --fix --ignore-pattern 'packages/**/generated-types/**'",
      "pnpm type-check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "dotenv": "17.2.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.7.3"
  }
}
